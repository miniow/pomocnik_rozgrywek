<UserControl x:Class="Pomocnik_Rozgrywek.Views.TeamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Pomocnik_Rozgrywek.ViewModels"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Pomocnik_Rozgrywek.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:TeamViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid>
                <TextBlock Text="{Binding Persons.Count}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"></TextBlock>
                <Button Command="{Binding OpenAddPersonDialogCommand}"
                        Style="{StaticResource addButton}"
                        HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Add"
                                      Style="{StaticResource addButtonIcon}"
                                      VerticalAlignment="Center"
                                      Width="11"
                                      Height="11"
                                      Margin="0 0 10 0" />
                        <TextBlock Text="Add Team" />
                    </StackPanel>
                </Button>
            </Grid>

        </Grid>
        <DataGrid Style="{DynamicResource DataGridStyle1}"
                  CellStyle="{DynamicResource DataGridCellStyle1}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                  RowStyle="{DynamicResource DataGridRowStyle1}"
                  Grid.Row="1"
                  ItemsSource="{Binding Teams}"
                  Margin="0 0 10 0"
                  LoadingRow="DataGrid_LoadingRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    IsReadOnly="True"
                                    Width="auto"
                                    Binding="{Binding Id}" />
                <DataGridTemplateColumn Header="Team"
                                        IsReadOnly="True"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Height="35"
                                         Width="35"
                                         Stroke="{StaticResource mainColor}"
                                         StrokeThickness="2"
                                         Margin="10,0,10,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding Crest}" />
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name"
                                    IsReadOnly="True"
                                    Width="*"
                                    Binding="{Binding Name}" />
                <DataGridTextColumn Header="Short Name"
                                    IsReadOnly="True"
                                    Width="*"
                                    Binding="{Binding ShortName}" />
                <DataGridTextColumn Header="Tla"
                                    IsReadOnly="True"
                                    Width="*"
                                    Binding="{Binding Tla}" />

                <DataGridTextColumn Header="Last Updated"
                                    IsReadOnly="True"
                                    Width="*"
                                    Binding="{Binding LastUpdated}" />
                <DataGridTemplateColumn Header="Operations"
                                        IsReadOnly="True"
                                        Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource gridEditButton}"
                                        Cursor="Hand"
                                        Command="{Binding DataContext.EditPersonCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <fa:IconImage Icon="Pencil"
                                                  Style="{StaticResource gridButtonIcon}" />
                                </Button>
                                <Button Style="{StaticResource gridRemoveButton}"
                                        Cursor="Hand"
                                        Margin="5 0 0 0"
                                        Command="{Binding DataContext.DeletePersonCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <fa:IconImage Icon="DeleteLeft"
                                                  Style="{StaticResource gridButtonIcon}" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
